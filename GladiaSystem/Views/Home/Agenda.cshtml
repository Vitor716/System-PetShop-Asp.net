@model IEnumerable<GladiaSystem.Models.Agenda>
@{
    ViewBag.Title = "Agenda";
}
@Styles.Render("~/Content/agenda.css")
<table class="table" id="tableBorder">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hour)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hour)
            </td>
            <td>
                <a href='@Url.Action("DeleteAgenda", "Home", new { codAgenda = item.ID })'>
                    <img src='~/Content/Imagens/delete.svg' />
                </a>
            </td>
        </tr>
    }

</table>