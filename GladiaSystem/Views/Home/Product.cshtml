@model GladiaSystem.Models.Product
@{
    ViewBag.Title = "Cadastrar produto";
    ViewBag.Selected = "product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    @using (Html.BeginForm("RegisterProd", "Home", FormMethod.Post))
    {
    <fieldset>
        <legend>Dados do produto</legend>
        <hr class="form-hr" />
        <div class="input-block">
            <label for="name">Nome completo</label>
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="input-block">
            <label for="avatar">
                Marca
            </label>
            @Html.EditorFor(model => model.Brand)
            @Html.ValidationMessageFor(m => m.Brand, "", new { @class = "text-danger" })
        </div>


        <div class="input-block">
            <label for="avatar">
                Categoria
            </label>
        </div>


        <div class="input-block">
            <label for="currency-field">Preço</label>
            <input type="text"
                   name="currency-field"
                   id="currency-field"
                   pattern="^\R$\d{1,3}(,\d{3})*(\.\d+)?R$"
                   value=""
                   data-type="currency"
                   placeholder="R$">
            @Html.EditorFor(model => model.Price)
            @Html.DisplayFor(m => m.Quant, new { htmlAttributes = new { @class = "name", @placeholder = "R$"  } })
        </div>

        <div class="input-block">
            <label for="quant">
                Quantidade
            </label>
            @Html.EditorFor(model => model.Quant)
            @Html.DisplayFor(m => m.Quant, new { htmlAttributes = new { @class="name", @type = "number" } } )
        </div>

        <div class="textarea-block">
            <div id="up-img-tiny" class="up-img">
                <img src="~/Content/Imagens/up-img.svg" id="up-photo" alt="Upload img" />
                <p class="send-img">Envie sua foto</p>
            </div>
        </div>

        <div class="input-block">
            <label id="email-label" for="avatar">
                Descrição
            </label>
            @Html.TextAreaFor(model => model.Desc)
            @Html.ValidationMessageFor(m => m.Desc, "", new { @class = "error-red" })
        </div>

        <button class="sub-button" type="submit">Cadastrar</button>
    </fieldset>
        @section Scripts{
            @Scripts.Render("~/bundles/jqueryval");
        }
    }
</main>

