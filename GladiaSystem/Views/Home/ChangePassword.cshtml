@model GladiaSystem.Models.User
@{
    ViewBag.Title = "Configurações ";
    ViewBag.Selected = "config";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="change-photo" id="small-card">
        <div class="info">
            <img src="~/Content/Imagens/fakePictureProfile.svg" alt="Avatar photo" class="avatar-img" />
            <p class="avatar-name">@Session["name"]</p>
            <p class="text-email">Email </p>
            <p class="desc-email">@Session["email"]</p>
        </div>
        <button class="sub-button" type="file">Alterar foto
            <img src="~/Content/Imagens/up-dark.svg" alt="upload img" class="upload-img"/>
        </button>
    </div>
    <div class="big-container" id="bigger-card">
        <div class="change-container">
            <a href="@Url.Action("ChangePassword", "Home")"
               id="activated-down"
               class="link-a"><span>Alterar senha </span></a>
            <a href="@Url.Action("ChangeName", "Home")"
               class="link-a"><span>Alterar nome</span></a>
            <a href="@Url.Action("DeleteAccount", "Home")"
               class="link-a"><span class="change">Apagar conta </span></a>
        </div>
        <hr class="divide-hr" />
        @using (Html.BeginForm("ChangePass", "Home", FormMethod.Post))
        {
            <div class="input-block">
                <label for="senha">Senha</label>
                @Html.EditorFor(model => model.password)
                @Html.ValidationMessageFor(m => m.password, "", new { @class = "error-red" })
            </div>
            <div class="input-block">
                <label for="confSenha">Confirmar senha</label>
                @Html.EditorFor(model => model.confPassword)
                @Html.ValidationMessageFor(m => m.confPassword, "", new { @class = "error-red" })
            </div>

            <button class="sub-button" id="att-button" type="submit">Atualizar</button>
            @section Scripts{
                @Scripts.Render("~/bundles/jqueryval");
            }
        }
    </div>
</div>